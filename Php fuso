            // parte di connessione al database
function get_top10_last4weeks() { 
    echo " Inizio funzione<br>";
    try {
        $db = new PDO('sqlite:C:/Users/gabry/Downloads/tirocinio.db');
        echo " Connessione DB riuscita<br>";

        $sql = "
        WITH l AS (
            SELECT siteid, SUM(earnings) e1
            FROM ad_revenues
            WHERE date >= date('now','-28 days')
            GROUP BY siteid
        ),
        p AS (
            SELECT siteid, SUM(earnings) e0
            FROM ad_revenues
            WHERE date >= date('now','-56 days') AND date < date('now','-28 days')
            GROUP BY siteid
        )
        SELECT l.siteid,
               e1,
               COALESCE(e0,0) AS e0,
               ABS(e1 - COALESCE(e0,0)) AS abs_diff,
               CASE 
                   WHEN COALESCE(e0,0) = 0 THEN NULL
                   ELSE ROUND((e1 - e0) * 100.0 / e0, 2)
               END AS perc
        FROM l
        LEFT JOIN p USING(siteid)
        ORDER BY perc DESC
        LIMIT 10;
        ";

        $rs = $db->query($sql);
        echo " Query di test eseguita<br>";

        // Converte i risultati in array associativo
        $output = $rs->fetchAll(PDO::FETCH_ASSOC);

        // Mostra in formato leggibile (solo per debug)
        echo "<pre>";
        print_r($output);
        echo "</pre>";

        // Ritorna JSON
        return json_encode($output);

    } catch (PDOException $e) {
        echo "<p style='color:red;'>Errore DB: " . htmlspecialchars($e->getMessage()) . "</p>";
        return null;
    }
}

get_top10_last4weeks();
